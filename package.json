{
    "name": "@pektin/client",
    "version": "1.1.74",
    "description": "A client to facilitate the control of pektin dns servers",
    "main": "dist/js/index.js",
    "types": "dist/js/index.d.ts",
    "license": "MIT",
    "type": "module",
    "author": {
        "name": "Paul Colin Hennig",
        "url": "https://y.gy",
        "email": "pektin@y.gy"
    },
    "exports": {
        "import": "./dist/js/index.js",
        "default": "./dist/js/index.js",
        "node": "./dist/js/index.js",
        "deno": "./dist/js/index.js"
    },
    "repository": {
        "type": "git",
        "url": "https://git.y.gy/pektin/pektin-js-client"
    },
    "keywords": [
        "pektin",
        "dns",
        "server",
        "client",
        "domain",
        "name",
        "system",
        "install"
    ],
    "quokka": {
        "stdEsm": false,
        "nativeEsm": true
    },
    "devDependencies": {
        "@types/node": "^16.11.12",
        "@typescript-eslint/eslint-plugin": "^5.10.1",
        "@typescript-eslint/parser": "^5.10.1",
        "dotenv": "^16.0.0",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsdoc": "^37.7.0",
        "eslint-plugin-prettier": "^4.0.0",
        "prettier": "^2.5.1",
        "typescript": "^4.4.4",
        "@types/punycode": "^2.1.0"
    },
    "dependencies": {
        "@firstdorsal/powerdns-api": "^1.11.0",
        "@pektin/config": "^1.0.51",
        "@pektin/dns-zonefile": "^0.3.1",
        "@pektin/global-registrar": "^1.0.13",
        "@pektin/toluol-wasm-nodejs": "^0.3.0",
        "cross-fetch": "^3.1.4",
        "punycode": "^2.1.1",
        "yaml": "^1.10.2"
    },
    "scripts": {
        "build": "tsc",
        "start": "tsc --watch",
        "before-publish": "yarn build && yarn compile-deno && yarn bundle-policies",
        "manual-test": "RED='\u001b[1;91m' ; NO_COLOR='\u001b[0m' ; echo \"${RED}Don't forget to compile the TS files first with: yarn start ${NO_COLOR}\" ; node dist/js/_manualTests/index.js",
        "compile-deno": "sh scripts/compile-deno.sh",
        "upgrade-pektin": "yarn upgrade --latest @pektin/config @pektin/global-registrar",
        "bundle-policies": "sh scripts/bundle-policies.sh"
    }
}
